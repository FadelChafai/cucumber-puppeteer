{
  "name": "cucumber-puppeteer",
  "version": "1.0.0",
  "description": "A Node.js template for end-to-end testing your app with Cucumber.js and Puppeteer",
  "main": "index.js",
  "scripts": {
    "start": "set NODE_ENV=test && npx cucumber-js --format ./features/support/formatter/PrettyFormatter",
    "test": "set NODE_ENV=test && jest",
    "test-server": "http-server ./test/html &"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patheard/cucumber-and-puppeteer.git"
  },
  "keywords": [
    "cucumber",
    "puppeteer"
  ],
  "author": "Pat Heard <patrick.heard@tpsgc-pwgsc.gc.ca>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patheard/cucumber-and-puppeteer/issues"
  },
  "homepage": "https://github.com/patheard/cucumber-and-puppeteer#readme",
  "dependencies": {
    "chai": "^4.2.0",
    "cucumber": "^5.1.0",
    "puppeteer": "^1.12.2"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "jest": "^24.1.0"
  }
}
